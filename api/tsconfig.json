{
  "extends": "@tsconfig/node16-strictest-esm/tsconfig.json",
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "sourceMap": true,    
    "moduleResolution": "node",
    "target": "ES2022",
    "strict": true,
    "skipLibCheck": true,
    "noPropertyAccessFromIndexSignature": false,    
    "baseUrl": "./src",
    "paths": {
      "@auth/*": ["module/auth/*"],
      "@user/*":["module/user/*"],
      "@error": ["module/error"],
      "@notifier/*": ["module/notifier/*"],
      "@setup/*": ["setup/*"],
      "@utils": ["utils"],
      "@common/auth/*": ["../../common/src/modules/auth/*"]
    }
  },
  "include": [
    "src",
    "../common",
    "**/*.test.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}